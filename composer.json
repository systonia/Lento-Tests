{
    "name": "systonia/lento-tests",
    "description": "Standalone unit/integration tests for Lento framework",
    "type": "project",
    "scripts": {
        "test": "vendor/bin/phpunit --testdox --display-deprecations --display-warnings",
        "coverage:text": "vendor/bin/phpunit --coverage-text",
        "coverage:html": "vendor/bin/phpunit --coverage-html coverage/"
    },
    "autoload": {
        "psr-4": {
            "Lento\\Tests\\": "Tests/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lento\\Tests\\": "Tests/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../Lento",
            "options": {
                "symlink": true
            }
        }
    ],
    "require": {
        "systonia/lento": "dev-main",
        "phpunit/phpunit": "^10.5",
        "psr/container": "^2.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "psr/log": "^3.0"
    }
}